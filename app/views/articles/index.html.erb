

<div class="articles">
  <div class="container">
    <div class="row">
      <div class="col-md-1"></div>

      <div clas="col-md-10">

    <p><%= link_to "Create Post"  ,new_article_path,class:"btn-create"%></p>
    </div>
  </div>
    <% @articles.each do |article| %>
    <div class="article">
      <p class="date"><%= article.created_at.strftime('%b %d') %></p>
            
        
             <%= link_to(article) do %>
        <h2><%= article.title %></h2><br>
       <%= image_tag article.user_image,class:"user-image" %>
      <p class="author">by <%= article.author %></p>
      <% end %>
      <p class="article_content"><%= truncate(article.body , :length => 140) %></p>

    </div>
    <% end %>
  </div>
</div>